<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_tic_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD05CA0F"
    tools:context=".controller.fragments.TicTocToeFragment"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/textView"
        android:layout_width="253dp"
        android:layout_height="58dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:text="Game : 4 in a Row"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="115dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="123dp"
            android:layout_height="82dp"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:text="turn : "
            android:textAllCaps="true"
            android:textColor="#2E1919"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_r_turn"
            android:layout_width="12dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="#060A10"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="189dp"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button23"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button_0_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button_0_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button_0_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_r_1_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_1_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button_r_1_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button_1_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_0_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button_0_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_0_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_0_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button_0_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>