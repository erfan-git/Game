<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_tic_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11C1AD"
    tools:context=".controller.fragments.TicTocToeFragment"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/textView"
        android:layout_width="253dp"
        android:layout_height="58dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:text="@string/game_tic_toc_toe"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout_tic"
        android:layout_width="300dp"
        android:layout_height="378dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="93dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/turn"
                android:textAllCaps="true"
                android:textColor="#070606"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_turn"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#23A4F1"
                android:clickable="false"
                android:shadowColor="#B60F0F"
                android:textColor="#0D0E0E"
                android:textColorLink="#078488"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="X" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_0_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#0B0707"
                android:textSize="36sp"
                tools:text="X" />

            <Button
                android:id="@+id/button_0_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#100A0A"
                android:textSize="36sp"
                tools:text="O" />

            <Button
                android:id="@+id/button_0_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#130B0B"
                android:textSize="36sp"
                tools:text="X" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#0C0A0A"
                android:textSize="36sp"
                tools:text="O" />

            <Button
                android:id="@+id/button_1_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#0C0505"
                android:textSize="36sp"
                tools:text="X" />

            <Button
                android:id="@+id/button_1_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#0C0909"
                android:textSize="36sp"
                android:typeface="normal"
                tools:text="O" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_2_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#090606"
                android:textSize="36sp"
                tools:text="X" />

            <Button
                android:id="@+id/button_2_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#0B0909"
                android:textSize="36sp"
                tools:text="O" />

            <Button
                android:id="@+id/button_2_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#090606"
                android:textSize="36sp"
                tools:text="X" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>